set nowrap
set formatoptions=q

set iminsert=0
set imsearch=-1
" ウインドウの幅
set columns=130
" ウインドウの高さ
set lines=40

" IME関連
set iminsert=0
set imsearch=-1

" swp output directory
set directory=$HOME/dotfiles/vimfiles/swap
set undodir=$HOME/dotfiles/vimfiles/undo
set backupdir=$HOME/dotfiles/vimfiles/backup


" ウィンドウの透明度設定
set transparency=246

colorscheme solarized
set background=dark

